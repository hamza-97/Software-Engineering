<section class="Signup-form">
  <div>
  <img class="sign_image" src="/img/scripto.png" alt="Logo image" height="80" width="80">  
  <h1 >Edit profile </h1>
  </div>
<div class="signup_form">
  <form method ="POST" action="/users/edit_form?_method=PUT">


    <label>Username</label>
    <input type="text" name="username"  required placeholder="Username" maxlength="10" required pattern="[A-Za-z0-9._-]+"><br><br>

    <label>Contact Number</label>
    <input type="integer" name="Contact" required placeholder="+92xxx-xxxxxxx" maxlength="14" required pattern="[0-9-]+.{13,}"><br><br>

    <label>Enter Old Password</label>
    <input type="Password" name="oldPassword" required placeholder="Old Password" maxlength="15" pattern=".{6,}"><br><br>

    <label>Enter New Password</label>
    <input type="Password" name="Password" required placeholder="Password (min-length=6)" maxlength="15" pattern=".{6,}"><br><br>

    <label>Confirm New password</label>
    <input type="Password" name="ConfirmPassword" required placeholder="Rewrite Password" maxlength="15" pattern=".{6,}"><br>

    <input type="Submit" value="Update">
  </form>
  </div>
</section>

