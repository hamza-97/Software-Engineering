</div>
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 class="text-center display-4 my-4">Upload your Script</h1>
        <form action="/users/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3">
            <input type="file" name="file" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label">Choose File</label>
          </div>
          <label>Genre</label>
          <!-- <input type="select"> -->
          <select>
            <option type="option" name="genre" value="thriller">Thriller>
            <option type="option" name="genre" value="comedy">Comedy>
            <option type="option" name="genre" value="romance">Romance>
            <option type="option" name="genre" value="psifi">Psifi>
            <option type="option" name="genre" value="action">Action>
</select>
            <!-- </select> -->
          <input type="submit" value="Submit" class="btn btn-primary btn-block">

        </form>
        <hr>

      </div>
    </div>
  </div>

