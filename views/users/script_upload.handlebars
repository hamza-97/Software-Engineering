      <div class="col-md-6 m-auto">
        <h2 class="welcome">Upload your Script</h2>
        <div class ="signup_form">
        <form  action="/users/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3">
            <input type="file" name="file" id="file" class="custom-file-label">
            <label for="file" class="custom-file-label">Choose File</label>
          </div>
            
          
          <p class="a">Select the Genre</p>

          <label class="label"><input class="input" type="radio" name="genre" value="Horror" checked>
          Horror</label>
         
          <label class="label"><input class="input" type="radio" name="genre" value="Action">
          Action</label>
          <label class="label"><input class="input" type="radio" name="genre" value="Fantasy">
          Fantasy</label>
          <label class="label"><input class="input" type="radio" name="genre" value="Mystery">
          Mystery</label>
           <label class="label"><input class="input" type="radio" name="genre" value="Romance">
          Romance</label>
           <label class="label"><input class="input" type="radio" name="genre" value="Thriller">
          Thriller</label>
          <label class="label"><input class="input" type="radio" name="genre" value="Science Fiction">
          Science Fiction</label>
          <br>
          <p class="a">Price of the Script</p>
          <input class="signup_form_input" type="text" name="price" required placeholder="Price" required pattern="[0-9]+"><br><br><br>
          
          <p class="a">Running Time of Script</p>
          <input class="signup_form_input" type="textarea" name="duration" required placeholder="Minutes" required pattern="[0-9]+"><br><br><br>
          
          <p class="a">Number of characters</p>
          <input class="signup_form_input" type="text" name="noc" required placeholder="Number of Characters" required pattern="[0-9]+"><br><br><br>
          
          <p class="a">Sypnosis of the Script</p>
          <input class="signup_form_input" type="textarea" name="sypnosis" required placeholder="Synopsis..."><br><br><br>
          
          <input class="big" type="submit" value="Submit" >
          
        </form>
      </div>
